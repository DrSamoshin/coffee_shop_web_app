# Environment Variables Example
# Copy this file to .env.local and customize values for your environment

# Application mode
VITE_ADMIN_MODE=false
VITE_DEBUG_MODE=false

# API Configuration
VITE_API_BASE_URL=http://0.0.0.0:8080
VITE_API_TIMEOUT=10000

# Application Settings
VITE_APP_NAME="Coffee Shop Manager"
VITE_APP_SUBTITLE="Coffee shop management system"
VITE_DEFAULT_LANGUAGE=en
VITE_CURRENCY=BYN

# Feature flags
VITE_ENABLE_LOGGING=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_EXPERIMENTAL_FEATURES=false

# UI Settings
VITE_THEME_MODE=light
VITE_ANIMATION_ENABLED=true
